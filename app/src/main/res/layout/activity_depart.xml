<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/greenbr"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_train_24"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                android:elevation="200dp"
                android:layout_marginHorizontal="45dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="65dp"
                    android:elevation="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        app:cardElevation="8dp"
                        android:layout_marginHorizontal="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="l채htev채 juna"
                            android:layout_margin="6dp"
                            android:textSize="16dp"
                            />
                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="70dp"
                            android:background="#17FFFFFF"
                            android:textSize="30dp"
                            android:hint="00000"
                            android:textColorHint="#BABABA"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/junanumero"
                            android:inputType="number"
                            android:digits="0123456789"
                            android:maxLength="5"
                            android:textCursorDrawable="@color/gray"
                            android:layout_marginTop="10dp"
                            />
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="15dp"
                        app:cardElevation="8dp"
                        android:layout_marginHorizontal="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kulkup채iv채"
                            android:layout_margin="6dp"
                            android:textSize="16dp"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:id="@+id/kulkupaivaButton"
                            android:background="@android:color/transparent"
                            android:elevation="0dp"
                            android:textColor="@color/black"
                            android:text="01.01.2023"
                            android:textSize="20dp"
                            android:padding="0dp"
                            android:layout_marginTop="10dp"

                            />

                    </androidx.cardview.widget.CardView>


                    <Button
                        android:layout_width="170dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/ok"
                        android:backgroundTint="@color/purple_500"
                        android:text="OK"
                        android:textSize="30dp"
                        />

                    <Button
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="40dp"
                        android:id="@+id/raportti"
                        android:backgroundTint="@color/purple_500"
                        android:text="Raportti"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>